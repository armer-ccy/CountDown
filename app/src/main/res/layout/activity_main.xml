<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/hour2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
            tools:ignore="ButtonStyle"/>
        <Button
            android:id="@+id/hour1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
        />
        <Button
            android:id="@+id/hour"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="50dp"
        />
        <Button
            android:id="@+id/minute2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
        />
        <Button
            android:id="@+id/minute1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
        />
        <Button
            android:id="@+id/minute"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="50dp"
        />
        <Button
            android:id="@+id/second2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
        />
        <Button
            android:id="@+id/second1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@color/black"

            android:orientation="horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
        />
    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="64dp"
        android:layout_marginBottom="64dp" android:text="开始" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp" android:text="恢复" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" tools:ignore="MissingConstraints"/>
    <Button
        android:id="@+id/Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" android:layout_marginBottom="64dp" android:text="设置铃声"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/end"
        app:layout_constraintStart_toEndOf="@+id/start"/>

</android.support.constraint.ConstraintLayout>